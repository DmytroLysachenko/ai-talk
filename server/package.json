{
  "name": "ai-talk-server",
  "version": "1.0.0",
  "description": "WebSocket-based TTS Server using Kokoro-JS and Express.js",
  "main": "server.ts",
  "type": "module",
  "scripts": {
    "start": "node --loader ts-node/esm src/server.ts",
    "dev": "nodemon --trace-warnings --exec node --loader ts-node/esm src/server.ts",
    "build": "tsc"
  },
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "tts",
    "websocket",
    "express",
    "kokoro-js",
    "typescript"
  ],
  "author": "Dmytro Lysachenko",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^5.1.0",
    "http": "^0.0.1-security",
    "kokoro-js": "^1.2.0",
    "morgan": "^1.10.0",
    "socket.io": "^4.8.1",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.1",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.14.0",
    "@types/socket.io": "^3.0.2",
    "nodemon": "^3.1.9",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  }
}
